  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvcrn/claudepretty.git"
  },
  "bugs": {
    "url": "https://github.com/dvcrn/claudepretty/issues"
  },
  "homepage": "https://github.com/dvcrn/claudepretty#readme",
  "engines": {
    "node": ">=18.0.0"
